<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mybatis.dao.UserDao">

    <resultMap id="BaseResultMap" type="User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="locked" column="is_locked"/>
        <result property="version" column="version"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="delete" column="is_delete"/>
    </resultMap>

    <resultMap id="AccountResultMap" type="map">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="locked" column="is_locked"/>
        <result property="version" column="version"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="delete" column="is_delete"/>
        <collection property="accounts" ofType="Account">
            <id property="id" column="account_id"/>
            <result property="userId" column="user_id"/>
            <result property="bankId" column="bank_id"/>
            <result property="money" column="money"/>
            <result property="locked" column="is_locked"/>
            <result property="version" column="version"/>
            <result property="gmtCreate" column="gmt_create"/>
            <result property="gmtModified" column="gmt_modified"/>
            <result property="delete" column="is_delete"/>
        </collection>
    </resultMap>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO mybatis_user (username, password, name)
        VALUES (#{username}, #{password}, #{name})
    </insert>

    <select id="get" resultMap="BaseResultMap">
        SELECT id,
               username,
               password,
               name,
               is_locked,
               version,
               gmt_create,
               gmt_modified,
               is_delete
        FROM mybatis_user
        WHERE id = #{id}
          AND is_delete = 0
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        SELECT id,
               username,
               password,
               name,
               is_locked,
               version,
               gmt_create,
               gmt_modified,
               is_delete
        FROM mybatis_user
        WHERE is_delete = 0
        ORDER BY gmt_create
    </select>

    <select id="getPage" resultMap="BaseResultMap">
        SELECT id,
               username,
               password,
               name,
               is_locked,
               version,
               gmt_create,
               gmt_modified,
               is_delete
        FROM mybatis_user
        WHERE is_delete = 0
        ORDER BY gmt_create
        LIMIT #{startIndex}, #{endIndex}
    </select>

    <update id="update">
        UPDATE mybatis_user
        <set>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="locked != null">
                is_locked = #{locked},
            </if>
            <if test="password != null or name != null or locked != null">
                version=version+1
            </if>
        </set>
        WHERE id = #{id} AND version=#{version} AND is_delete = 0
    </update>

    <update id="delete">
        update mybatis_user
        set is_delete = 1,
            version=version + 1
        where id = #{id}
          AND version = #{version}
          AND is_delete = 0
    </update>

    <select id="getAccount" resultMap="AccountResultMap">
        SELECT user.id           as id,
               username,
               password,
               name,
               user.is_locked    as is_locked,
               user.version      as version,
               user.gmt_create   as gmt_create,
               user.gmt_modified as gmt_modified,
               user.is_delete    as is_delete,
               account.id as account_id,
               user_id,
               bank_id,
               money,
               account.is_locked    as is_locked,
               account.version      as version,
               account.gmt_create   as gmt_create,
               account.gmt_modified as gmt_modified,
               account.is_delete    as is_delete
        FROM mybatis_user user
                 left join mybatis_account account on user.id = account.user_id
        WHERE user.id = #{id}
          AND user.is_delete = 0
          AND account.is_delete = 0
    </select>

</mapper>