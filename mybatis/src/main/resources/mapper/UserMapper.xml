<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mybatis.dao.UserDao">

    <sql id="vo">
        user_id, username
    </sql>

    <insert id="create">
        <selectKey keyProperty="userId" resultType="java.lang.String" order="BEFORE">
            SELECT UUID()
        </selectKey>
        INSERT INTO `user` (user_id, username, password, create_time, update_time, `delete`)
        VALUES (#{userId}, #{username}, #{password}, CURRENT_TIME, NULL, 0);
    </insert>

    <select id="get" parameterType="java.lang.String" resultType="UserVO">
        SELECT
        <include refid="vo"/>
        from `user`
        where user_id = #{id}
        and `delete` = 0
    </select>

    <select id="getList" parameterType="java.lang.String" resultType="UserVO">
        SELECT
        <include refid="vo"/>
        from `user` where user_id in
        <foreach item="item" index="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
        order by create_time
    </select>

    <select id="getAll" resultType="UserVO">
        SELECT
        <include refid="vo"/>
        from `user`
        where `delete` = 0
        order by create_time
    </select>

    <select id="getPage" resultType="UserVO">
        SELECT
        <include refid="vo"/>
        from `user`
        where `delete` = 0
        order by create_time
        limit #{startIndex}, #{endIndex}
    </select>

    <update id="update">
        UPDATE `user`
        <set>
            <if test="username!=null">
                username=#{username},
            </if>
            <if test="password!=null">
                `password`=#{password},
            </if>
            <if test="username!=null or password!=null">
                update_time=CURRENT_TIME,
            </if>
        </set>
        WHERE user_id=#{userId} and `delete`=0
    </update>

    <update id="delete" parameterType="java.lang.String">
        update `user`
        set `delete`=1,
            update_time=CURRENT_TIME
        where user_id = #{id}
          and `delete` = 0
    </update>

</mapper>