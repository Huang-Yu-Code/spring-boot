<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.api.mapper.DonationGoodsMapper">

    <resultMap id="Map" type="com.example.api.entity.DonationGoods">
        <id property="donationId" column="donation_id" jdbcType="INTEGER"/>
        <id property="goodsId" column="goods_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询多行数据-->
    <select id="selectList" resultMap="Map">
        select * from donation_goods
        <where>
            <if test="donationId != null">
                and donation_id = #{donationId}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into donation_goods(donation_id, goods_id) values
        <foreach collection="list" item="item" separator=",">
            (#{item.donationId}, #{item.goodsId})
        </foreach>
    </insert>

    <!--通过主键删除-->
    <delete id="delete">
        delete
        from donation_goods
        where donation_id = #{id}
    </delete>

</mapper>

