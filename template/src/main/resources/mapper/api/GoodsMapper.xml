<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.api.mapper.GoodsMapper">

    <resultMap id="Map" type="com.example.api.entity.Goods">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="numbers" column="numbers" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="warehouseId" column="warehouse_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="select" resultMap="Map">
        select *
        from goods
        where id = #{id}
    </select>

    <!--查询多行数据-->
    <select id="selectList" resultMap="Map">
        select * from goods
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
            <if test="warehouseId != null">
                and warehouse_id = #{warehouseId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into goods(id, warehouse_id, name, type, numbers, state)values
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.warehouseId}, #{item.name}, #{item.type}, #{item.numbers}, #{item.state})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update goods
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="numbers != null">
                numbers = #{numbers},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="delete">
        delete
        from goods
        where id = #{id}
    </delete>

</mapper>

