<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.api.mapper.DonationMapper">

    <resultMap id="Map" type="com.example.api.entity.Donation">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="name" jdbcType="INTEGER"/>
        <result property="warehouseId" column="state" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="VoMap" type="com.example.api.vo.DonationVo">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="warehouseId" column="warehouse_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <association property="userInfo" javaType="com.example.system.entity.UserInfo">
            <id property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="name" column="ui_name" jdbcType="VARCHAR"/>
            <result property="image" column="image" jdbcType="VARCHAR"/>
            <result property="idNumbers" column="id_numbers" jdbcType="VARCHAR"/>
            <result property="phoneNumbers" column="phone_numbers" jdbcType="INTEGER"/>
        </association>
        <collection property="goods" javaType="list" ofType="com.example.api.entity.Goods">
            <id property="id" column="g_id" jdbcType="INTEGER"/>
            <result property="name" column="g_name" jdbcType="VARCHAR"/>
            <result property="type" column="type" jdbcType="VARCHAR"/>
            <result property="numbers" column="numbers" jdbcType="INTEGER"/>
            <result property="state" column="g_state" jdbcType="INTEGER"/>
            <result property="warehouseId" column="warehouse_id" jdbcType="INTEGER"/>
        </collection>
    </resultMap>

    <!--查询单个-->
    <select id="select" resultMap="VoMap">
        select donation.id,
               donation.user_id,
               donation.warehouse_id,
               donation.state,
               donation.create_time,
               donation.update_time,
               ui.user_id,
               ui.name ui_name,
               ui.image,
               ui.id_numbers,
               ui.phone_numbers,
               g.id g_id,
               g.warehouse_id,
               g.name g_name,
               g.type,
               g.numbers,
               g.state g_state
        from donation
                 inner join user_info ui on donation.user_id = ui.user_id
                 inner join donation_goods dg on donation.id = dg.donation_id
                 inner join goods g on dg.goods_id = g.id
        where donation.id = #{id}
    </select>

    <!--查询多行数据-->
    <select id="selectList" resultMap="VoMap">
        select donation.id,
        donation.user_id,
        donation.warehouse_id,
        donation.state,
        donation.create_time,
        donation.update_time,
        ui.user_id,
        ui.name ui_name,
        ui.image,
        ui.id_numbers,
        ui.phone_numbers,
        g.id g_id,
        g.warehouse_id,
        g.name g_name,
        g.type,
        g.numbers,
        g.state g_state
        from donation
        inner join user_info ui on donation.user_id = ui.user_id
        inner join donation_goods dg on donation.id = dg.donation_id
        inner join goods g on dg.goods_id = g.id
        <where>
            <if test="id != null">
                and donation.id = #{id}
            </if>
            <if test="userId != null">
                and donation.user_id = #{userId}
            </if>
            <if test="warehouseId != null">
                and donation.warehouse_id = #{warehouseId}
            </if>
            <if test="state != null">
                and donation.state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into donation(id, user_id, warehouse_id, state)
        values (#{id}, #{userId}, #{warehouseId}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update donation
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="warehouseId != null">
                warehouse_id = #{warehouseId},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="delete">
        delete
        from donation
        where id = #{id}
    </delete>

</mapper>

